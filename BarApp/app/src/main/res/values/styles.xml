<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->


        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="android:colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>

        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:colorAccent">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
        <item name="android:textColorSecondary">@color/myTextPrimaryColor</item>


        <item name="android:windowBackground">@color/myWindowBackground</item>



    </style>

    <style name="MyApp.ActionBarTheme" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="colorControlNormal">@color/myTextPrimaryColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/myTextPrimaryColor</item>


    </style>


    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:colorAccent">@color/myTextPrimaryColor</item>

    </style>


    <style name="viepagertitlestrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/myPrimaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>


