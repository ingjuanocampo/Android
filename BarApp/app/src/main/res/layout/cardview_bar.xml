<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/transparent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="@dimen/elevation_cardview"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <ImageView
                android:src="@drawable/nightclub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bar_photo"
                android:scaleType="fitXY"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                        <TextView
                            android:text="Fonetica "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bar_name"
                            android:layout_alignParentTop="true"
                            style="@style/TextBigGray"
                            />

                        <TextView
                            android:text="$ 7000"
                            android:textStyle="italic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bar_price"
                            style="@style/TextNormalGray"


                            />

                    <TextView
                            android:text="10 pm - 5 am"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/myAccentColor"
                            android:id="@+id/bar_hour"

                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="right">

                    <ImageView
                        android:src="@drawable/like_tiny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>

                    <TextView
                        android:includeFontPadding="true"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:background="@drawable/myrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,5"
                        style="@style/TextNormalGreen"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>