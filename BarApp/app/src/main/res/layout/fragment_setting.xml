<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="partyup.com.myapplication.FragmentSetting"
    android:layout_margin="@dimen/margin_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextPrimaryColorMeduim"
                android:text="Cuidad"/>

            <Spinner
                android:layout_margin="@dimen/margin_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spn_city"></Spinner>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"></View>



            <TextView
                android:layout_marginTop="@dimen/margin_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextPrimaryColorMeduim"
                android:text="Notificaciones"/>

            <Switch
                android:layout_margin="@dimen/margin_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/switch_notifi"></Switch>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"></View>




            <android.support.design.widget.FloatingActionButton
                android:layout_margin="@dimen/margin_cardview"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_anchor="@id/appbar"
                app:layout_anchorGravity="bottom|right"
                android:elevation="3dp"
                android:src="@drawable/ic_check_black_24dp"
                android:clickable="true"/>

        </LinearLayout>



    </ScrollView>

</FrameLayout>
