<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linena_view_item_detail"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_view_details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tint="@color/greyIcon"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            />


            <TextView
                android:id="@+id/txt_label_description"

                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="[Description]"
                android:textColor="@color/greyAccent"
                android:visibility="gone"
                android:textStyle="bold"/>.

        <TextView
            android:id="@+id/txt_label_details"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textColor="@color/greyAccent"
            android:visibility="visible"
            android:textStyle="bold"
            android:textAlignment="gravity"/>

        <LinearLayout
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:orientation="vertical" android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/text1_details"
                android:layout_height="wrap_content"
                android:text="Jueves - Domingo "
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_item_detail"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Ver Mapa"/>

        </LinearLayout>



    </LinearLayout>


    <!--   - Main Tab: Type, Price, Number, Details, Payment System, Web Site, Address

             Puntos por fidelidad.

           - Secundary Tab: Events and Offers

           - Trirdht: Contact, leave you message, this is bar your ?

           -Agregar favoritos

        -->


    <View android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/greyIcon"
        android:layout_marginLeft="100dp"></View>
</LinearLayout>